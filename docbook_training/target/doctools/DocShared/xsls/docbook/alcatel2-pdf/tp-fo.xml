<!DOCTYPE t:templates [
<!ENTITY hsize0 "10pt">
<!ENTITY hsize1 "12pt">
<!ENTITY hsize2 "14.4pt">
<!ENTITY hsize3 "17.28pt">
<!ENTITY hsize4 "20.736pt">
<!ENTITY hsize5 "24.8832pt">
<!ENTITY hsize0space "7.5pt"> <!-- 0.75 * hsize0 -->
<!ENTITY hsize1space "9pt"> <!-- 0.75 * hsize1 -->
<!ENTITY hsize2space "10.8pt"> <!-- 0.75 * hsize2 -->
<!ENTITY hsize3space "12.96pt"> <!-- 0.75 * hsize3 -->
<!ENTITY hsize4space "15.552pt"> <!-- 0.75 * hsize4 -->
<!ENTITY hsize5space "18.6624pt"> <!-- 0.75 * hsize5 -->
]>
<t:templates xmlns:t="http://nwalsh.com/docbook/xsl/template/1.0"
	     xmlns:param="http://nwalsh.com/docbook/xsl/template/1.0/param"
             xmlns:fo="http://www.w3.org/1999/XSL/Format"
             xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<!-- ********************************************************************
     $Id: tp-fo.xml,v 1.4 2009/10/26 20:52:34 dcramer Exp $
     ********************************************************************

     This file is part of the DocBook XSL Stylesheet distribution.
     See ../README or http://docbook.sf.net/ for copyright
     and other information.

     ******************************************************************** -->

<!-- ==================================================================== -->


  <t:titlepage t:element="article" t:wrapper="fo:block">
	<t:titlepage-content t:side="recto"/>
	<t:titlepage-content t:side="verso"/>
	<t:titlepage-before t:side="recto"/>
	<t:titlepage-before t:side="verso"/>
  </t:titlepage>
  
<!-- ==================================================================== -->

  <t:titlepage t:element="book" t:wrapper="fo:block">
    <t:titlepage-content t:side="recto">
	  
      
      <!-- need subtr 2.77cm in from 14.3cm =11.53-->
      <corpauthor/> <!-- i bet we want delete this -->

       <!-- actually, properties on the below do not matter if there is a template for them already in fo.xsl, which there now is for most of these elements -->

       <!-- we don't want to output productnumber here, we handle it in fo.xsl-->

      <productname
		text-align="left"
		font-size="14pt"
		margin-top="11.53cm" 
		start-indent="0mm"
		font-weight="normal"	     
		font-family="Trebuchet"
		/>
      <title
	     t:named-template="division.title"
	     param:node="ancestor-or-self::book[1]"
	     text-align="left"
	     font-size="30pt"
	     margin-top="11.53cm" 
		 letter-spacing=".25"
	     start-indent="0mm"
	     font-weight="normal"	     
	     font-family="Trebuchet"
         space-before="55pt"/>
      <subtitle
  		text-align="left"
  		font-size="10pt"
    	start-indent="0mm"
    	font-weight="normal"	   
		space-before="3pt"
		font-family="Trebuchet"/>

<!-- we don't actually want to use releaseinfo here 
      <releaseinfo text-align="left"
		   font-size="10pt"
		   space-before="24pt"
    	           start-indent="5mm"
    	           font-family="Trebuchet"
	           letter-spacing="1pt"/> -->
      <biblioid  text-align="left"
		   font-size="10pt"
		   space-before="3pt"
           start-indent="0mm"
           font-family="Trebuchet"/>
      <!-- not listing <issuenum/>, we handle it directly in fo.xsl instead-->
      <pubdate text-align="left"
		   font-size="10pt"
		   space-before="3pt"
           start-indent="0mm"
           font-family="Trebuchet"/>
 
      <!-- <copyright/> -->
    </t:titlepage-content>

  <t:titlepage-content t:side="verso">
      <copyright font-size="11pt"/>
      <legalnotice font-size="11pt"/>
  </t:titlepage-content>

  <t:titlepage-separator>
      <fo:block break-after="page"/>
  </t:titlepage-separator>

  <t:titlepage-before t:side="recto">
     <fo:block-container absolute-position="fixed" left="0pt" top="0pt" z-index="-1">
      <fo:block>
        <fo:external-graphic src="url({$admon.graphics.path}cover.pdf)"
	                     />
       </fo:block>
     </fo:block-container>
  </t:titlepage-before>

  <t:titlepage-before t:side="verso">
      <fo:block break-after="page"/>
  </t:titlepage-before>
</t:titlepage>

<!-- ==================================================================== -->

<t:titlepage t:element="part" t:wrapper="fo:block">
  <t:titlepage-content t:side="recto">
      <title
	     t:named-template="division.title"
	     param:node="ancestor-or-self::part[1]"
	     text-align="left"
	     font-size="22pt"
	     margin-top="4cm"
	     font-weight="bold"
	     font-family="sans-serif"
	     border-bottom="solid 1pt black"/>
    <subtitle
	      text-align="center"
	      font-size="&hsize4;"
	      space-before="&hsize4space;"
	      font-weight='bold'
	      font-style='italic'
	      font-family="{$title.fontset}"/>
  </t:titlepage-content>

  <t:titlepage-content t:side="verso">
  </t:titlepage-content>

  <t:titlepage-separator>
  </t:titlepage-separator>

  <t:titlepage-before t:side="recto">
  </t:titlepage-before>

  <t:titlepage-before t:side="verso">
  </t:titlepage-before>
</t:titlepage>

<t:titlepage t:element="partintro" t:wrapper="fo:block">
  <t:titlepage-content t:side="recto">
    <title
	   text-align="center"
	   font-size="&hsize5;"
	   font-weight="bold"
	   space-before="1em"
	   font-family="{$title.fontset}"/>
    <subtitle
	      text-align="center"
	      font-size="&hsize2;"
	      font-weight="bold"
	      font-style="italic"
	      font-family="{$title.fontset}"/>
    <corpauthor/>
    <authorgroup/>
    <author/>
    <othercredit/>
    <releaseinfo/>
    <copyright/>
    <legalnotice/>
    <pubdate/>
    <revision/>
    <revhistory/>
    <abstract/>
  </t:titlepage-content>

  <t:titlepage-content t:side="verso">
  </t:titlepage-content>

  <t:titlepage-separator>
  </t:titlepage-separator>

  <t:titlepage-before t:side="recto">
  </t:titlepage-before>

  <t:titlepage-before t:side="verso">
  </t:titlepage-before>
</t:titlepage>

  <t:titlepage t:element="table.of.contents" t:wrapper="fo:block">
    <t:titlepage-content t:side="recto">
      <title
	     t:force="1"
	     t:named-template="gentext"
	     param:key="'TableofContents'"
	     margin-left="{$title.margin.left}"
	     start-indent="0pt"/>
    </t:titlepage-content>

    <t:titlepage-content t:side="verso">
    </t:titlepage-content>

    <t:titlepage-separator>
    </t:titlepage-separator>

    <t:titlepage-before t:side="recto">
    </t:titlepage-before>

    <t:titlepage-before t:side="verso">
    </t:titlepage-before>
  </t:titlepage>


</t:templates>
