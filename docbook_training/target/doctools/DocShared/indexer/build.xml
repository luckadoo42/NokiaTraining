<project default="build-indexer">

  <property environment="env"/>
  <property name="ant.jar" value="${env.ANT_HOME}/lib/ant.jar"/>


  <target name="build-indexer">

	<javac
	  srcdir="src"
	  destdir="lib"
	  includes="com/nexwave/nsidita/*.java com/nexwave/nquindexer/*.java"
	  classpath="${ant.jar}"/>
	  
	<jar
	  destfile="nw-cms.jar"
	  basedir="lib"
	  includes="com/**"/>
	
	<delete dir="lib"/>
	
  </target>


</project>